<article class="blog blue">
  <div class="blog__text">
    <h1 class="blog__title blue">
      <h3>{{title}}</h3>
    </h1>
    <div class="blog__subtitle small">
      <p>Created by
        {{username}}
        on
        {{format_date date_created}}</p>
    </div>
    <div class="blog__bar"></div>
    <div class="blog__preview-txt">
      <p>{{content}}</p>
    </div>
  </div>
</article>

{{! Comments }}

<div class="row d-flex justify-content-center">
  <div class="col-md-8 col-lg-6">
    <div class="card shadow-sm border" style="background-color: #f0f2f5">
      <div class="card-body p-4">
        <form class="mb-4" id="commentForm">
          <label class="form-label" for="newComment">+ Add a comment</label>
          <input
            type="text"
            id="newComment"
            class="form-control"
            placeholder="Type comment..."
            style="background-color: #f0f2f5"
          />
        </form>

        {{>comments}}

      </div>
    </div>
  </div>
</div>

<script src="/js/comment.js"> </script>